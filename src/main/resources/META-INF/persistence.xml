<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.1" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="nickniew.feedplayback_apigerencial_jar_0.0.1-SNAPSHOTPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <!-- Configurações do banco de dados -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.password" value="somePassword"/>
      
            <!-- Configurações do provedor JPA (Hibernate) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>      
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Configurações de cache -->
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            
            <!-- Configurações de conexão -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.connection.release_mode" value="auto"/>    
            
            <!-- Provedor JPA -->
            <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

            <!-- Entidades -->
            <class>nickniew.feedplayback.apigerencial.model.Usuario</class>    
            <class>nickniew.feedplayback.apigerencial.model.Beneficio</class> 
            <class>nickniew.feedplayback.apigerencial.model.Cupom</class> 
            <class>nickniew.feedplayback.apigerencial.model.Avaliacao</class> 
            <class>nickniew.feedplayback.apigerencial.model.Estabelecimento</class> 
            <class>nickniew.feedplayback.apigerencial.model.ImagemEstabelecimento</class> 
            <class>nickniew.feedplayback.apigerencial.model.Quesito</class> 
            <class>nickniew.feedplayback.apigerencial.model.QuesitoAvaliado</class> 
            <class>nickniew.feedplayback.apigerencial.model.QuesitosEstabelecimento</class> 
            <class>nickniew.feedplayback.apigerencial.model.UsuarioEmpreendedor</class>    
        </properties>
    </persistence-unit>
</persistence>
